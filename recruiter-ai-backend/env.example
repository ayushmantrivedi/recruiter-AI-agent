API_PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=recruiter_ai
DB_USER=recruiter_user
DB_PASSWORD=recruiter_pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
